<div class="l-container">
  <div class="page-title">
    <h2>Locations</h2>
    <div class="buttons l-pullRight">
      <a {{action updateGardenWidgets}} href="#" class="btn">Update Widgets</a>
      <a {{action updateGardenWebThemes}} href="#" class="btn">Update Themes</a>
      <a {{action updateGardenWebLayouts}} href="#" class="btn">Update Layouts</a>

      {{#if controllers.client.single_domain}}
         {{confirmation-link title="Deploy All" action="deploy_all" param=this 
          message="You are about to deploy. Are you sure?" classes="btn"}}
      {{/if}}
    </div>
  </div>



  <div class="faux-table faux-table--striped">

    <div class="faux-table-head">
      <span class="faux-table-cell">Name</span>
      <span class="faux-table-cell">Actions</span>
    </div> <!-- end .faux-table-head -->

    <ul class="faux-table-body">
      {{#each model}}
      <li {{bindAttr class=":faux-table-row :location corporate"}}>
        <div class="faux-table-cell">
          {{#if corporate}}
          <strong>Corporate:</strong>
          {{/if}}
          {{name}}
        </div>
        <div {{bindAttr class=":faux-table-cell single_domain"}}>
          {{#link-to "website" this.website class="btn btn--a" }}Edit{{/link-to}}
          <a {{bindAttr href="this.website.herokuUrl"}} class="btn btn--a">View</a>
          {{confirmation-link title="Deploy" action="deploy" param=this 
            message="You are about to deploy. Are you sure?" classes="btn btn--a deploy"}}
        </div>
      </li>
      {{/each}}
    </ul> <!-- end .faux-table-body -->
  </div> <!-- end .faux-table -->
</div>

